{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUndeclaredDependencies": "error"
			},
			"suspicious": {
				"noConsole": "error"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	},
	"overrides": [
		{
			"includes": [".vscode/**"],
			"json": { "parser": { "allowTrailingCommas": true, "allowComments": true } },
			"formatter": { "enabled": false },
			"linter": { "enabled": false }
		},
		{
			"includes": ["examples/**"],
			"linter": {
				"rules": {
					"suspicious": { "noConsole": "off" }
				}
			}
		}
	]
}
