{
	"name": "iyzico-js",
	"version": "0.1.0",
	"description": "Modern, fully-typed TypeScript client for iyzico payment API â€” fetch-based, zero dependencies, works everywhere",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			}
		}
	},
	"main": "./dist/index.mjs",
	"types": "./dist/index.d.mts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdown",
		"check": "tsc --noEmit && tsc --noEmit -p tsconfig.test.json",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:integration": "vitest run --config vitest.integration.config.ts",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"prepublishOnly": "pnpm build && publint"
	},
	"keywords": [
		"iyzico",
		"iyzipay",
		"payment",
		"turkey",
		"typescript",
		"fetch",
		"cloudflare-workers"
	],
	"author": "feroxbyte",
	"engines": {
		"node": ">=20"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/feroxbyte/iyzico-js.git"
	},
	"bugs": {
		"url": "https://github.com/feroxbyte/iyzico-js/issues"
	},
	"homepage": "https://github.com/feroxbyte/iyzico-js#readme",
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@vitest/coverage-v8": "^4.0.18",
		"lefthook": "^2.1.1",
		"publint": "^0.3.5",
		"tsdown": "^0.20.3",
		"typescript": "^5.7.3",
		"vitest": "^4.0.18"
	}
